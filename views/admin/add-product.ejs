<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/add-product.css">
</head>

<%- include('../includes/navigation.ejs') %>

    <form class="product-form" action="/admin/add-product" method="POST">
        <div class="form-control">
            <div class="nest">
                <input placeholder="Enter product name.." type="text" name="title" id="title"/>
            </div>
            <div class="nest">
                <input placeholder="Enter product image url..." type="text" name="imageUrl" id="imageUrl"/>
            </div>
            <div class="nest">
                <input placeholder="Enter product price.." type="number" name="price" id="price" step="0.01"/>
            </div>
            <div class="nest">
                <textarea placeholder="Enter product description.." name="description" id="description" rows="5"></textarea>
            </div>
            <input class="btn" type="submit" value="Add Product">
        </div>
    </form>
    
<%- include('../includes/end.ejs') %>